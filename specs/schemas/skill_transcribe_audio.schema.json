{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SkillTranscribeAudio",
  "type": "object",
  "required": ["status", "transcript", "segments"],
  "properties": {
    "status": { "type": "string", "enum": ["ok", "error"] },
    "transcript": { "type": "string" },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["start", "end", "text"],
        "properties": {
          "start": { "type": "number" },
          "end": { "type": "number" },
          "text": { "type": "string" }
        }
      }
    },
    "trace": {
      "type": "object",
      "required": ["spec_version", "run_id"],
      "properties": {
        "spec_version": { "type": "string" },
        "run_id": { "type": "string" }
      }
    }
  }
}
