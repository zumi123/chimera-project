{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SkillComposeShortVideo",
  "type": "object",
  "required": ["status", "final_asset_path", "duration_seconds"],
  "properties": {
    "status": { "type": "string", "enum": ["ok", "error"] },
    "final_asset_path": { "type": "string" },
    "duration_seconds": { "type": "integer" },
    "render_log": { "type": "object" },
    "trace": {
      "type": "object",
      "required": ["spec_version", "run_id"],
      "properties": {
        "spec_version": { "type": "string" },
        "run_id": { "type": "string" }
      }
    }
  }
}
